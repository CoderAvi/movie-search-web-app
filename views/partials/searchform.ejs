<form class="form-group" action="/search/results" method="GET">
  <div class="row">
    <div class="col-lg-10 col-sm-9 col-8">
      <input type="text" class="form-control" name="searchquery" placeholder="Search Movies, TV Shows, People" />
    </div>

    <div class="col-lg-2 col-sm-3 col-4">
      <select class="custom-select" name="type">
        <option value="">Movies/TV</option>
        <option value="movie">Movies</option>
        <option value="series">TV</option>
        <option value="people">People</option>
      </select>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">
    <i class="fas fa-search"></i>
    Search
  </button>
</form>